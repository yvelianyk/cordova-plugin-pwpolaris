<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/slide_animation_list_item"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/slide_animation_list_number"
            android:layout_width="wrap_content"
            android:minWidth="19dip"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_box_number_bg"
            android:gravity="center"
            android:text="1"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textColor="@color/cm_list_item_number_tcolor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/slide_animation_list_ico"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/slide_animation_list_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/cm_list_item_main_tcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/slide_animation_list_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_list_move"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/slide_animation_list_check_layout"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">
        <CheckBox
            android:id="@+id/slide_animation_list_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_selector_slide"
            android:visibility="visible"
            android:clickable="true"
            android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>