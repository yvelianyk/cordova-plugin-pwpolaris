<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/slide_manage_portrait_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_bg"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/option_bg" >

                <com.infraware.document.slide.SlideDragNDropHorizontalListView
                    android:id="@+id/slide_manage_port_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="2.33dip"
                    android:layout_marginLeft="2.33dip"
                    android:layout_marginTop="2.33dip"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

                <ImageView
                    android:id="@+id/slide_manage_indicator"
                    android:layout_width="8.00dip"
                    android:layout_height="100.00dip"
                    android:layout_gravity="left"
                    android:src="@drawable/slide_move_icon"
                    android:visibility="invisible" />
<!--  
                <View
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:background="@drawable/right_shadow_slide" />
-->
            </FrameLayout>

            <LinearLayout
                android:id="@+id/slide_manager_btn_layout_portrait"
                android:layout_width="40dip"
                android:layout_height="100.00dip"
                android:orientation="vertical"
                android:background="@drawable/slide_btn_portrait_n" >

                <ImageView
                    android:id="@+id/slide_manage_add_btn_portrait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
					android:background="@drawable/slidemanage_btn_background_selector"
                    android:contentDescription="@string/dm_slide_insert"
                    android:focusable="true"
                    android:longClickable="true"
                    android:padding="5.00dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/slidemanage_add_selector" />

                <ImageView
                    android:id="@+id/slide_manage_slideshow_btn_portrait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
					android:background="@drawable/slidemanage_btn_background_selector"
                    android:contentDescription="@string/dm_slide_show"
                    android:focusable="true"
                    android:longClickable="true"
                    android:padding="5.00dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/slidemanage_slideshow_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>