<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/title_bg_common" >

        <TextView
            android:id="@+id/storage_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="@string/sd_card"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/new_folder_button"
            android:layout_width="43dp"
            android:layout_height="43dp" />
        
        <ImageButton
            android:id="@+id/select_button"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:visibility="gone" />
       
    </LinearLayout>

    <TextView
        android:id="@+id/default_folder_text"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="#999999" />

    <ListView
        android:id="@+id/select_folder_listview"
        android:layout_width="match_parent"
        android:layout_height="528dp"
        android:divider="@color/sdk_fm_list_divider_color"
        android:dividerHeight="0.5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/ll_file_save_select_folder_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/split_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/bt_cancel_file_save_select_folder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/split_button_bg_selector"
            android:gravity="center"
            android:shadowColor="#ffffff"
            android:shadowDx="90"
            android:shadowDy="1"
            android:text="@string/cm_btn_cancel"
            android:textColor="@color/common_btn_text_color_selector"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <Button
            android:id="@+id/bt_confirm_file_save_select_folder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@drawable/split_button_bg_selector"
            android:gravity="center"
            android:shadowColor="#ffffff"
            android:shadowDx="90"
            android:shadowDy="1"
            android:text="@string/cm_btn_ok"
            android:textColor="@color/common_btn_text_color_selector"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>