<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
  	android:layout_height="48dip"
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/list_view_dialog_item_image_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="9dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"/>		
		
	<TextView android:id="@+id/list_view_dialog_item_text_view"
		android:layout_width="wrap_content"
		android:layout_height="48dip"
		android:textSize ="15sp"
		android:textColor="@color/cm_popup_item_normal"
		android:layout_toRightOf="@+id/list_view_dialog_item_image_view"
	    android:layout_marginLeft="8.67dip"
	    android:gravity="center_vertical"/>
</RelativeLayout>