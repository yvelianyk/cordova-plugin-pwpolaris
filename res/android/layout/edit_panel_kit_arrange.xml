<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/object_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/arrange_textwrapping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/object_align"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/object_Align_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_button_vertical_space" />

</LinearLayout>