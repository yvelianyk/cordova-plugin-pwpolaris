<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
  	android:layout_height="48dip"
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/img_sheet_insertcells"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="9dip"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"/>		
		
	<TextView android:id="@+id/txt_sheet_insertcells"
		android:layout_width="match_parent"
		android:layout_height="48dip"
		android:textSize ="18sp"
		android:textColor="@color/sheet_insertcell_text"
		android:layout_toRightOf="@+id/img_sheet_insertcells"
	    android:layout_marginLeft="8.67dip"
	    android:gravity="center_vertical"
	    android:paddingLeft="0dp"
	    android:paddingRight="15dp"/>
</RelativeLayout>