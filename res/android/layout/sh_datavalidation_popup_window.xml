<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_autofilter_popup_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popover_bg_01"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="4.33dp"
        android:paddingLeft="5.33dp"
        android:paddingRight="5.33dp"
        android:paddingTop="5.33dp" >

        <Button
            android:id="@+id/button_datavalidation_cancel"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@drawable/btn_multi_left_selector_sheet"
            android:text="@string/cm_btn_cancel"
            android:textColor="@color/popover_list_tcolor_selector"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_datavalidation_ok"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@drawable/btn_multi_right_selector_sheet"
            android:text="@string/cm_btn_ok"
            android:textColor="@color/popover_list_tcolor_selector"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>