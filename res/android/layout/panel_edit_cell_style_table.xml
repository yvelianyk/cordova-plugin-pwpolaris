                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_15_selector" />

                    <ImageButton
                        android:id="@+id/style16"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_16_selector" />

                    <ImageButton
                        android:id="@+id/style17"
                        android:layout_width="0dip"
