                        android:src="@drawable/ico_insert_sheet_table_style_22_selector" />

                    <ImageButton
                        android:id="@+id/style23"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_23_selector" />

                    <ImageButton
                        android:id="@+id/style24"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_24_selector" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/style_delete"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/panel_button_height"
                android:layout_marginBottom="@dimen/panel_common_content_area_margin_vertical"
                android:background="@drawable/btn_default_selector_common"
                android:gravity="center"
                android:text="@string/dm_clear"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
        <!-- content end -->
    </com.infraware.polarisoffice6.panel.EditPanelBodyScrollView>

</LinearLayout>