                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_06_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/style7"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_07_selector" />

                    <ImageButton
                        android:id="@+id/style8"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/panel_item_bg_selector_common"
                        android:clickable="true"
                        android:src="@drawable/ico_insert_sheet_table_style_08_selector" />

                    <ImageButton
                        android:id="@+id/style9"
                        android:layout_width="0dip"
