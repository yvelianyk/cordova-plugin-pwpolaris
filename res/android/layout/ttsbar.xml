<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tts_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.00dip"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.00dip"
        android:layout_gravity="bottom"
        android:background="@drawable/cm_menubar_bg_selector" >

        <View
            android:layout_width="0dip"
            android:layout_height="48.00dip"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tts_prev"
            android:layout_width="80dip"
            android:layout_height="48.00dip"
            android:background="@drawable/cm_menubar_bg_center_selector"
            android:clickable="true"
            android:contentDescription="@string/cm_btn_tts_previous"
            android:gravity="center"
            android:padding="0dip"
            android:scaleType="center"
            android:src="@drawable/btn_tts_prev" />

        <ImageView
            android:id="@+id/tts_playpause"
            android:layout_width="80dip"
            android:layout_height="48.00dip"
            android:background="@drawable/cm_menubar_bg_center_selector"
            android:clickable="true"
            android:contentDescription="@string/cm_btn_tts_start"
            android:gravity="center"
            android:padding="0dip"
            android:scaleType="center"
            android:src="@drawable/btn_tts_play" />

        <ImageView
            android:id="@+id/tts_next"
            android:layout_width="80dip"
            android:layout_height="48.00dip"
            android:background="@drawable/cm_menubar_bg_center_selector"
            android:clickable="true"
            android:contentDescription="@string/cm_btn_tts_next"
            android:gravity="center"
            android:padding="0dip"
            android:scaleType="center"
            android:src="@drawable/btn_tts_next" />

        <View
            android:layout_width="0dip"
            android:layout_height="48.00dip"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>