<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_common_dialog_bg" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/insert_hyperlink_layer01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actiontitlebar_layout"
        android:layout_marginLeft="12.67dip"
        android:layout_marginRight="12.67dip"
        android:layout_marginTop="16.00dip"
        android:background="@color/base_common_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pass_alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_open_password_required"
            android:textColor="@color/cm_common_message_text"
            android:textSize="17sp" />

        <com.infraware.polarisoffice6.common.ExEditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.00dip"
            android:background="@drawable/textfield_selector_common"
            android:focusable="true"
            android:inputType="textPassword"
            android:maxLength="255"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/cm_edit_text_normal"
            android:textColorHighlight="@color/cm_edit_text_highlight"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/incorrect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16.00dip"
            android:text="@string/fm_err_extract_password"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>