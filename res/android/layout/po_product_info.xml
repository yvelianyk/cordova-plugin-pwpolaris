<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fm_license_info_bg"
    android:orientation="vertical" >

    <include layout="@layout/cm_action_title_bar" />

    <LinearLayout
        android:id="@+id/ll_polaris_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/popover_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_polaris_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29.67dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_about_polaris_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/polaris_bi" />

            <TextView
                android:id="@+id/tv_about_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5.5dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/po_product_about_version"
                android:textSize="12sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_about_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="29.33dp"
            android:layout_marginRight="29.33dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_about_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3.33dp"
                android:layout_marginRight="3.33dp"
                android:lineSpacingExtra="11dp"
                android:text="@string/cm_msg_about_info"
                android:textColor="@color/po_product_about_info"
                android:textSize="12sp" />
        </ScrollView>

        <ImageView
            android:id="@+id/iv_about_infraware_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="17.33dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:src="@drawable/infraware_ci" />
    </LinearLayout>

</LinearLayout>