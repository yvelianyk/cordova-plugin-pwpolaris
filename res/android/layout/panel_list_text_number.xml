<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_btn_list_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/button_01"
        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:addStatesFromChildren="false"
        android:background="@drawable/panel_btn_list"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/button_01_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:duplicateParentState="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="0dip"
            android:text="(1234)"
            android:textColor="@color/panel_neganumber_text_color"
            android:textSize="14sp"
            android:width="0dip" />

        <ImageView
            android:id="@+id/button_01_right"
            android:layout_width="36.5dip"
            android:layout_height="match_parent"
            android:clickable="false"
            android:duplicateParentState="true"
            android:src="@drawable/ico_selection" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/cm_list_divider" />

    <LinearLayout
        android:id="@+id/button_02"
        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:addStatesFromChildren="false"
        android:background="@drawable/panel_btn_list"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/button_02_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:clickable="false"
            android:duplicateParentState="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:paddingRight="0dip"
            android:text="-1234"
            android:textColor="@color/panel_neganumber_text_color"
            android:textSize="14sp"
            android:width="0dip" />

        <ImageView
            android:id="@+id/button_02_right"
            android:layout_width="36.5dip"
            android:layout_height="match_parent"
            android:clickable="false"
            android:duplicateParentState="true"
            android:src="@drawable/ico_selection" />
    </LinearLayout>

</LinearLayout>