<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ico_slide_entrance_title_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="17dip"
                    android:layout_marginRight="17dip"
                    android:layout_marginBottom="12.5dip"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/dm_sort_direction"
                    android:textColor="@color/slide_trasnsition_title_text_color"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/slide_ani_option_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="17dip"
                android:layout_marginRight="17dip"
                android:background="@drawable/img_divider_repeat" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.5dip"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ico_slide_entrance_title_txt3"
                    android:layout_width="match_parent"
                    android:layout_height="16dip"
                    android:layout_marginLeft="17dip"
                    android:layout_marginRight="17dip"
                    android:gravity="left"
                    android:text="@string/slide_ani_title_03"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/slide_ani_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15.5dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginRight="25dip"
                    android:layout_marginTop="12.5dip"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/slide_ani_effec1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_default_btn"
                        android:button="@null"
                        android:checked="true"
                        android:drawableRight="@drawable/ico_selection_radio"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="15dip"
                        android:text="@string/slide_ani_effect_01"
                        android:textColor="@color/slide_select_text" />

                    <RadioButton
                        android:id="@+id/slide_ani_effec2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_default_btn"
                        android:button="@null"
                        android:drawableRight="@drawable/ico_selection_radio"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="15dip"
                        android:text="@string/slide_ani_effect_02"
                        android:textColor="@color/slide_select_text" />

                    <RadioButton
                        android:id="@+id/slide_ani_effec3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/common_default_btn"
                        android:button="@null"
                        android:drawableRight="@drawable/ico_selection_radio"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="15dip"
                        android:text="@string/slide_ani_effect_03"
                        android:textColor="@color/slide_select_text" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>