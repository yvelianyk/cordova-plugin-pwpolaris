<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_common_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69.33dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/split_cell_columns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/split_cell_columns_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="9.00dp"
                android:text="@string/dm_columns"
                android:textColor="@color/cm_common_message_text"
                android:textSize="14sp" />

            <com.infraware.polarisoffice6.common.ExEditText
                android:id="@+id/split_cell_columns_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textfield_selector_common"
                android:digits="0123456789"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2"
                android:paddingLeft="11.00dip"
                android:selectAllOnFocus="true"
                android:textColor="@color/cm_edit_text_normal"
                android:textColorHighlight="@color/cm_edit_text_highlight"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="34.00dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="9.00dp"
                android:text=" " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_multiplication" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/split_cell_rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/split_cell_rows_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="9.00dp"
                android:text="@string/dm_row"
                android:textColor="@color/cm_common_message_text"
                android:textSize="14sp" />

            <com.infraware.polarisoffice6.common.ExEditText
                android:id="@+id/split_cell_rows_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textfield_selector_common"
                android:digits="0123456789"
                android:inputType="number"
                android:lines="1"
                android:maxLength="2"
                android:paddingLeft="11.00dip"
                android:selectAllOnFocus="true"
                android:textColor="@color/cm_edit_text_normal"
                android:textColorHighlight="@color/cm_edit_text_highlight"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>