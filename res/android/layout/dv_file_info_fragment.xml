<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 
    <include layout="@layout/dv_action_title_bar" />
 -->
    <LinearLayout
       android:id="@+id/actiontitlebar_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" />
 
    <LinearLayout
        android:id="@+id/dv_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/dv_info_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_common_bg" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12.00dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/dv_ll_info_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/dv_info_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.00dp"
                            android:layout_marginBottom="4.00dp"
                            android:layout_marginTop="5.00dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/dv_info_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:singleLine="false"
                        android:layout_marginRight="22.00dp"
                        android:textColor="@color/base_info_file_name"
                        android:textSize="12sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

					<include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <!-- <LinearLayout
                    android:id="@+id/dv_info_contents"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout> -->

                <LinearLayout
                    android:id="@+id/dv_info_modified"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_modified_by"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_words"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dv_info_character_no_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dv_info_character_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dv_info_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dv_info_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dv_info_select_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/dv_info_attributes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.00dp"
                    android:layout_marginRight="12.00dp"
                    android:orientation="horizontal" >

                    <include
                        layout="@layout/dv_file_info_item"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>