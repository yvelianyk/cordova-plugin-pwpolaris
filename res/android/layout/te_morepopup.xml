<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/inlinepopup_bg_selector_common"
	>
	<TextView
	    android:id="@+id/tvmoreTTS"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:maxWidth="200dip"
	    android:minHeight="42dip"
	    android:maxHeight="60dip"
	    android:paddingLeft="9dip"
	    android:paddingRight="9dip"
	    android:paddingTop="12dip"
	    android:paddingBottom="12dip"
	    android:gravity="left|center_vertical"
	    android:text="@string/te_tts_title_selected"
	    android:textSize="14sp"
	    android:textColor="@color/inlinepopup_tcolor_selector"
	    android:background="@null"
	    android:singleLine="false"
	    />
	<ImageView
	    android:id="@+id/ivmoreTTS"
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dip"
	    android:maxWidth="218dip"
	    android:background="@color/te_morepopup_divider"
	    />
	<TextView
	    android:id="@+id/tvShare"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:maxWidth="200dip"
	    android:minHeight="42dip"
	    android:maxHeight="60dip"
	    android:paddingLeft="9dip"
	    android:paddingRight="9dip"
	    android:paddingTop="12dip"
	    android:paddingBottom="12dip"
	    android:gravity="left|center_vertical"
	    android:text="@string/cm_btn_send"
	    android:textSize="14sp"
	    android:textColor="@color/inlinepopup_tcolor_selector"
	    android:background="@null"
	    android:singleLine="false"
	    />
	<ImageView
	    android:id="@+id/ivShare"
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dip"
	    android:maxWidth="218dip"
	    android:background="@color/te_morepopup_divider"
	    />
	<TextView
	    android:id="@+id/tvSearch"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:maxWidth="200dip"
	    android:minHeight="42dip"
	    android:maxHeight="60dip"
	    android:paddingLeft="9dip"
	    android:paddingRight="9dip"
	    android:paddingTop="12dip"
	    android:paddingBottom="12dip"
	    android:gravity="left|center_vertical"
	    android:text="@string/string_filemanager_search_hint"
	    android:textSize="14sp"
	    android:textColor="@color/inlinepopup_tcolor_selector"
	    android:background="@null"
	    android:singleLine="false"
	    />
	
</LinearLayout>