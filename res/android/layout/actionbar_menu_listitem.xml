<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navi_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/menu_actionbar_image"
        android:layout_width="53.33dip"
        android:layout_height="48dip"
        android:background="@android:color/transparent"
        android:button="@null"
        android:duplicateParentState="true"
        android:gravity="center"
        android:padding="7dip"
        android:scaleType="center" />

    <TextView
        android:id="@+id/menu_actionbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/actionbar_file_menu_text_color"
        android:textDirection="locale"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/callsubmenu"
        android:layout_width="31.5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:duplicateParentState="true"
        android:scaleType="fitCenter"
        android:tag="callsubmenu"
        android:visibility="gone" />

</LinearLayout>