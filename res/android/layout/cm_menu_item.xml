<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="fill_parent"  
		android:layout_height="48dp"
		android:orientation="horizontal">
		<ImageView android:id="@+id/cm_menu_icon"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center_vertical"/>
		<TextView android:id="@+id/cm_menu_name"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_marginLeft="14.67dp"
			android:layout_weight="1"
			android:singleLine="true"
			android:textSize ="16sp"
			android:textColor="@color/cm_popup_item_normal"
			android:gravity="center_vertical"/>	
		<ImageView android:id="@+id/cm_menu_stat"
			android:layout_width="44.5dp"
			android:layout_height="fill_parent"
			android:layout_marginRight="9.5dp"
			android:layout_gravity="center_vertical"/>
		<RadioButton
			android:id="@+id/cm_menu_radio"
			android:layout_width="43.33dp"
			android:layout_height="fill_parent"
			android:layout_marginRight="8.33dp"
			android:button="@null"
			android:background="@drawable/cm_btn_radio_selector"
			android:clickable="false"
			android:focusable="false"/>
	</LinearLayout>
</LinearLayout>