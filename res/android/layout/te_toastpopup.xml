<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/inlinepopup_bg_selector_common"
	>

    <ImageView
		android:id="@+id/tvSelectAll"
		android:layout_width="56dip"
		android:layout_height="38dip"
		android:src="@drawable/ico_inline_allselect_selector"
		android:contentDescription="@string/dm_select_all"
		/>	
	<ImageView
	    android:id="@+id/ivSelectAll"
	    android:layout_width="0.5dip"
	    android:layout_height="fill_parent"
	    android:background="@color/te_morepopup_divider"
	    android:contentDescription="@string/dm_select_all"
	    />
	<ImageView
		android:id="@+id/tvCut"
		android:layout_width="56dip"
		android:layout_height="38dip"
		android:src="@drawable/ico_inline_cut_selector"
		android:contentDescription="@string/dm_cut"
		/>
	<ImageView
	    android:id="@+id/ivCut"
	    android:layout_width="0.5dip"
	    android:layout_height="fill_parent"
	    android:background="@color/te_morepopup_divider"
	    android:contentDescription="@string/dm_cut"
	    />
	<ImageView 
		android:id="@+id/tvCopy"
		android:layout_width="56dip"
		android:layout_height="38dip"
		android:src="@drawable/ico_inline_copy_selector"
		android:contentDescription="@string/cm_btn_copy"
		/>
	<ImageView
	    android:id="@+id/ivCopy"
	    android:layout_width="0.5dip"
	    android:layout_height="fill_parent"
	    android:background="@color/te_morepopup_divider"
	    android:contentDescription="@string/cm_btn_copy"
	    />	
	<ImageView
		android:id="@+id/tvPaste"
		android:layout_width="56dip"
		android:layout_height="38dip"
		android:src="@drawable/ico_inline_paste_selector"
		android:contentDescription="@string/string_contextmenu_object_paste"
		/>
	<ImageView
	    android:id="@+id/ivPaste"
	    android:layout_width="0.5dip"
	    android:layout_height="fill_parent"
	    android:background="@color/te_morepopup_divider"
	    android:contentDescription="@string/string_contextmenu_object_paste"
	    />	
	<ImageView
		android:id="@+id/tvMore"
		android:layout_width="47dip"
		android:layout_height="38dip"
		android:src="@drawable/ico_inline_more_selector"
		android:contentDescription="@string/cm_action_bar_menu"
		/>
		
</LinearLayout>