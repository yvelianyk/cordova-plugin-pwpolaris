<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<FrameLayout android:id="@+id/fm_template_layout"
		android:layout_width="162.67dp"
		android:layout_height="127dp">
		<ImageView android:id="@+id/fm_template_thumbnail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView android:id="@+id/fm_template_blank"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/fm_msg_blank"
			android:textSize="14sp"
			android:textColor="@color/fm_template_file_blank"
			android:singleLine="false"/>
	</FrameLayout>
	<TextView android:id="@+id/fm_template_name"
		android:layout_width="162.67dp"
		android:layout_height="21.33dp"
		android:layout_marginBottom="4dp"
		android:gravity="center_horizontal"
		android:textSize="12sp"
		android:textColor="@color/fm_template_file_name"
		android:singleLine="true"/>
</LinearLayout>