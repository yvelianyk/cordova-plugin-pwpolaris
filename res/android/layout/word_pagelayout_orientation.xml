<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/word_pagelayout_orientation"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="left|top"
	    android:text="@string/dm_word_pagelayout_orientation"
	    android:textColor="@color/panel_sub_title_tcolor"
	    android:textSize="@dimen/pl_title_text_size" />
	
	<RadioGroup
	    android:id="@+id/rg_orientation"
	    android:layout_width="match_parent"
	    android:layout_height="60.67dip"
	    android:layout_marginBottom="11.33dip"
	    android:layout_marginTop="3.67dip"
	    android:orientation="horizontal" >
	
	    <com.infraware.polarisoffice6.common.PageLayoutRadioButton
	        android:id="@+id/pagelayout_orientation_vertical"
	        android:layout_width="@dimen/pl_button_w"
	        android:layout_height="match_parent"
	        android:background="@drawable/pagelayout_orientation_02_selectible_radiobtn_selector"
	        android:button="@null"
	        android:checked="true" />
	
	    <View
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	
	    <com.infraware.polarisoffice6.common.PageLayoutRadioButton
	        android:id="@+id/pagelayout_orientation_horizontal"
	        android:layout_width="@dimen/pl_button_w"
	        android:layout_height="match_parent"
	        android:background="@drawable/pagelayout_orientation_01_selectible_radiobtn_selector"
	        android:button="@null" />
	
	    <View
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	
	    <View
	        android:layout_width="@dimen/pl_button_w"
	        android:layout_height="match_parent" />
	
	    <View
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	
	    <View
	        android:layout_width="@dimen/pl_button_w"
	        android:layout_height="match_parent" />
	</RadioGroup>
</LinearLayout>