<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/view_eula_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg_common"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/view_eula_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Copyrights information"
                android:textColor="@color/common_actionbar_name_selected"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/view_eula_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/cm_title_text" />

</LinearLayout>