<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edt_sheet_tap_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/sheet_tab_s"
    android:gravity="center_vertical"
    android:minWidth="54.33dip"
    android:orientation="horizontal" >

    <com.infraware.polarisoffice6.common.ExEditText
        android:id="@+id/edt_sheet_tap_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.50dip"
        android:layout_marginLeft="3.00dip"
        android:layout_marginRight="18.67dip"
        android:layout_marginTop="2.00dip"
        android:background="@drawable/textfield_selector_sheet"
        android:gravity="left|center_vertical"
        android:imeOptions="actionDone|flagNoFullscreen"
        android:lines="1"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:singleLine="true"
        android:textColor="@color/po_sheet_tab_button_edit_text_color_normal"
        android:textColorHighlight="@color/cm_edit_text_highlight"
        android:textCursorDrawable="@null"
        android:textSize="12sp" />

</LinearLayout>