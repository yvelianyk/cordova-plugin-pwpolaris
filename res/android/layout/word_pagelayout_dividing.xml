<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_pagebreak_dividing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/cm_white">

	<!-- TextView
	    android:id="@+id/word_pagelayout_dividing"
	    android:layout_width="match_parent"
	    android:layout_height="18.67dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:gravity="left|top"
	    android:text="@string/dm_word_pagelayout_dividing"
	    android:textColor="@color/panel_sub_title_tcolor"
	    android:textSize="@dimen/pl_title_text_size" / -->
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="16dip"
	    android:layout_marginTop="11.33dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/word_pagelayout_page_dividing"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|top"
	        android:text="@string/dm_word_pagelayout_page_dividing"
	        android:textColor="@color/panel_sub_title_tcolor"
	        android:textSize="@dimen/pl_sub_title_text_size" />
	    
	    <TextView
	        android:id="@+id/word_pagelayout_column_dividing"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|top"
	        android:text=""
	        android:textColor="@color/panel_sub_title_tcolor"
	        android:textSize="@dimen/pl_sub_title_text_size" />
	    
	    <TextView
	        android:id="@+id/word_pagelayout_section_dividing"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|top"
	        android:text="@string/dm_word_pagelayout_section_dividing"
	        android:textColor="@color/panel_sub_title_tcolor"
	        android:textSize="@dimen/pl_sub_title_text_size" />
	    
	    <TextView
	        android:id="@+id/word_pagelayout_continuous_dividing"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center|top"
	        android:text=""
	        android:textColor="@color/panel_sub_title_tcolor"
	        android:textSize="@dimen/pl_sub_title_text_size" />
	    
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/rg_dividing_group"
	    android:layout_width="match_parent"
	    android:layout_height="60.67dip"
	    android:layout_marginBottom="11.33dip"
	    android:layout_marginTop="3.67dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:layout_weight="2.5"
	    android:orientation="horizontal" >
	
	    <LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
		android:layout_weight="2.5"
		android:gravity="center"
	    android:orientation="horizontal">
	    
		    <CheckBox
		        android:id="@+id/pagelayout_page_dividing_1"
		        android:layout_width="@dimen/pl_button_w"
		        android:layout_height="59.5dip"
		        android:background="@drawable/pagelayout_page_dividing_01_selectible_radiobtn_selector"
		        android:button="@null" />
		    
		</LinearLayout>
	
	    <LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
		android:layout_weight="2.5"
		android:gravity="center"
	    android:orientation="horizontal">
		    
		    <CheckBox
		        android:id="@+id/pagelayout_page_dividing_2"
		        android:layout_width="@dimen/pl_button_w"
		        android:layout_height="match_parent"
		        android:background="@drawable/pagelayout_page_dividing_02_selectible_radiobtn_selector"
		        android:button="@null" />
		    
		</LinearLayout>
	
		<LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
		android:layout_weight="2.5"
		android:gravity="center"
	    android:orientation="horizontal">
		    
		    <CheckBox
		        android:id="@+id/pagelayout_section_dividing_1"
		        android:layout_width="@dimen/pl_button_w"
		        android:layout_height="match_parent"
		        android:background="@drawable/pagelayout_section_dividing_01_selectible_radiobtn_selector"
		        android:button="@null" />
		    
		</LinearLayout>
	
		<LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
		android:layout_weight="2.5"
		android:gravity="center"
	    android:orientation="horizontal">
		    <CheckBox
		        android:id="@+id/pagelayout_section_dividing_2"
		        android:layout_width="@dimen/pl_button_w"
		        android:layout_height="match_parent"
		        android:background="@drawable/pagelayout_section_dividing_02_selectible_radiobtn_selector"
		        android:button="@null" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>