<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2_contents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <View
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/panel_color_gradient_texture_item_space"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_01"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_02"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_03"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/panel_color_gradient_texture_item_space"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_11"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_12"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_13"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_21"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_22"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_23"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/gradation_center"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/panel_color_gradient_texture_item_space"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_04"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_05"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_06"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/panel_color_gradient_texture_item_space"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_14"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_15"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_16"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_color_gradient_item_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_24"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_25"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
                    android:button="@null"
                    android:clickable="true" />

                <com.infraware.polarisoffice6.panel.kit.CommonGradientRadioButton
                    android:id="@+id/button_26"
                    android:layout_width="@dimen/panel_color_gradient_item_width"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <com.infraware.polarisoffice6.panel.kit.CommonPanelColor
        android:id="@+id/gradationColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/panel_common_content_area_margin_horizontal"
        android:layout_marginRight="@dimen/panel_common_content_area_margin_horizontal"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical" />

</LinearLayout>
