<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <include
        android:id="@+id/separate_line_01"
        layout="@layout/cm_panel_divider" />

    <CheckBox
        android:id="@+id/solidNone"
        style="@style/PanelCheckBoxLeft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_button_height"
        android:layout_gravity="left"
        android:text="@string/dm_solid_none" />

    <include
        android:id="@+id/separate_line_11"
        layout="@layout/cm_panel_divider" />

    <LinearLayout
        android:id="@+id/solidMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/BevelTypeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/solid1"
                android:src="@drawable/panel_icon_bevel_effect01"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid2"
                android:src="@drawable/panel_icon_bevel_effect02"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid3"
                android:src="@drawable/panel_icon_bevel_effect03"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid4"
                android:src="@drawable/panel_icon_bevel_effect04"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid5"
                android:src="@drawable/panel_icon_bevel_effect05"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid6"
                android:src="@drawable/panel_icon_bevel_effect06"
                style="@style/PanelIconItem" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/BevelTypeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_icon_3d_effect_item_vertical_space"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/solid7"
                android:src="@drawable/panel_icon_bevel_effect07"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid8"
                android:src="@drawable/panel_icon_bevel_effect08"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid9"
                android:src="@drawable/panel_icon_bevel_effect09"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid10"
                android:src="@drawable/panel_icon_bevel_effect10"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid11"
                android:src="@drawable/panel_icon_bevel_effect11"
                style="@style/PanelIconItem" />

            <ImageButton
                android:id="@+id/solid12"
                android:src="@drawable/panel_icon_bevel_effect12"
                style="@style/PanelIconItem" />
        </LinearLayout>
    </LinearLayout>

    <com.infraware.common.widget.WheelButton
        android:id="@+id/solid_depth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical" />

</LinearLayout>