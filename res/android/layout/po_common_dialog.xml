<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="22dp"
		android:paddingRight="22dp">
		<com.infraware.polarisoffice6.common.ExEditText android:id="@+id/fm_dialog_edit"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:paddingLeft="11dp"
			android:paddingRight="11dp"
			android:textSize="16sp"
			android:layout_marginTop="15.33dp"
			android:layout_marginBottom="15.33dp"
			android:singleLine="true"
			android:inputType="textCapSentences"
			android:background="@drawable/textfield_selector_common"
			android:textColor="@color/cm_edit_text_normal"
			android:textCursorDrawable="@null"/>
		<TextView android:id="@+id/fm_dialog_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:layout_marginTop="11.5dp"
			android:layout_marginBottom="11.5dp"
			android:textColor="@color/po_common_dialog_text_color"/>
	</LinearLayout>
</ScrollView>