<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_item_layout"
    android:layout_width="212.66dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- findbar - pop over ListItem -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/CheckBox01"
            android:layout_width="@dimen/pop_over_check_width"
            android:layout_height="42.67dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/CheckBox01"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ListItemText1"
                android:layout_width="match_parent"
                android:layout_height="42.67dip"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                android:gravity="center_vertical|left"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="10.00dip"
                android:paddingRight="0dip"
                android:singleLine="true"
                android:text="@+id/ListItemText1"
                android:textColor="@color/popover_list_tcolor_selector"
                android:textSize="@dimen/list_item_checkbox_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>