<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/panel_common_content_area_margin_horizontal"
    android:paddingRight="@dimen/panel_common_content_area_margin_horizontal"
    android:layout_height="wrap_content" >
    <View
        android:visibility="gone"
        android:id="@+id/toppadding"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/panel_common_content_area_margin_vertical"/>

    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="fill_parent"
        android:layout_height="42.67dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/panel_txt_numbersList"
            android:layout_width="wrap_content"
            android:layout_height="42.67dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/btn_selection_tcolor_selector_sheet"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/panel_img_numbersList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@drawable/sheet_number_list_selector" />
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:id="@+id/bottompadding"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/panel_common_content_area_margin_vertical"/>

</LinearLayout>