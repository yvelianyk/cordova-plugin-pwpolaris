<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_edit_body_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <com.infraware.polarisoffice6.panel.EditPanelBodyScrollView
        android:id="@+id/panel_edit_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/panel_edit_content_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/anchor_video_play"
                style="@style/PanelAnchorTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_subtitle_h"
                android:text="@string/dm_play_video" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/panel_common_content_area_margin_vertical"
                android:paddingLeft="@dimen/panel_common_content_area_margin_horizontal"
                android:paddingRight="@dimen/panel_common_content_area_margin_horizontal"
                android:paddingTop="@dimen/panel_common_content_area_margin_vertical" >

                <CheckBox
                    android:id="@+id/checkbox_repeat_video"
                    style="@style/PanelCheckBoxRight"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/panel_button_height"
                    android:text="@string/dm_repeat_video" />
            </LinearLayout>
        </LinearLayout>
    </com.infraware.polarisoffice6.panel.EditPanelBodyScrollView>

</LinearLayout>