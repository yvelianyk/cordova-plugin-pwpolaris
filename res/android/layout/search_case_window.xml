<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- //20130820 khchoi To change pop over menu [start] -->
    <!-- findbar - pop over -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ListSearchOptionLayout"
        android:background="@drawable/popover_bg_02" >       
		        
	        <ListView
	            android:id="@+id/ListSearchOption"
	            android:layout_width="212.66dip"
	            android:divider="@android:color/transparent"
	            android:dividerHeight="0dp"
	            android:listSelector="@android:color/transparent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical|left" />	        					
	        
	        <Button
	            android:id="@+id/ListSearchOptionButton"
	            android:layout_width="match_parent"
	            android:layout_height="41dip"      
	            android:layout_below="@id/ListSearchOption"    
	            android:layout_alignParentBottom="true"  
	            android:layout_marginTop="5.33dip"
	            android:layout_marginBottom="4.33dip"
	            android:layout_marginLeft="5.33dip"
	            android:layout_marginRight="5.33dip"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/btn_default_selector_common"
	            android:text="@string/dm_replace_mode"
	            android:textColor="@color/btn_default_tcolor_selector"
	            android:textSize="14sp" >
	        </Button>       
              
    </RelativeLayout>

</LinearLayout>