<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/custom_dialog_content_bg_color"
    android:gravity="center_horizontal" >
    
    <ImageView
        android:id="@+id/license_register_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_logo"
        android:layout_marginTop="27dip" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:text="@string/str_license_register_info"
        android:textSize="17sp"
        android:textColor="#FF2b8de3"
        android:gravity="center" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:orientation="horizontal" >
        
        <com.infraware.polarisoffice6.common.ExEditText
            android:id="@+id/license_register_1"
            android:background="@drawable/inputbox"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:inputType="textNoSuggestions"
            android:textCursorDrawable="@null" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/license_register_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:textSize="17sp"
        android:textColor="#FFff5656"
        android:text="Invalid License. The license is expired" />
    
    <Button
        android:id="@+id/license_register_confirm"
        android:layout_width="265dip"
        android:layout_height="43dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/btn_default_selector"
        android:text="@string/cm_btn_register"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@drawable/license_btn_text_selector" />
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="18dip"
        android:orientation="horizontal" >
        
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/str_contact_info"
             android:textColor="#ff939394"
             android:textSize="12sp" />
         
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/str_support_mail"
             android:textColor="#ff2599f3"
             android:textSize="12sp" />
         
    </LinearLayout>
</LinearLayout>
