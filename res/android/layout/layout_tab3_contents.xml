        android:layout_height="@dimen/panel_texture_item_height"
        android:layout_marginBottom="@dimen/panel_color_gradient_texture_item_space"
        android:layout_marginLeft="@dimen/panel_texture_left_right_margin"
        android:layout_marginRight="@dimen/panel_texture_left_right_margin"
        android:orientation="horizontal" >

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_01"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_02"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_03"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_04"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_texture_item_height"
        android:layout_marginLeft="@dimen/panel_texture_left_right_margin"
        android:layout_marginRight="@dimen/panel_texture_left_right_margin"
        android:orientation="horizontal" >

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_05"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
