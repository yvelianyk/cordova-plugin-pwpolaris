            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_07"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/panel_color_gradient_texture_item_space"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />

        <com.infraware.polarisoffice6.panel.kit.CommonImageRadioButton
            android:id="@+id/button_08"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>