<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_guide_mid_item_top"
        android:layout_width="match_parent"
        android:layout_height="32.33dp"
        android:layout_marginLeft="27.33dp"
        android:layout_marginRight="27.33dp"
        android:layout_marginTop="17.33dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_guide_mid_new_feature_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2.50dp"
            android:gravity="center_vertical|right"
            android:text="@string/fm_office_guide_new_feature"
            android:textColor="@color/fm_office_guide_new_feature"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />
        
        <ImageView
            android:id="@+id/iv_guide_last_new_feature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/introduce_bi" />
        
        <TextView
            android:id="@+id/tv_guide_mid_new_feature_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/fm_office_guide_new_feature"
            android:textColor="@color/fm_office_guide_new_feature"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_guide_mid_item"
        android:layout_width="match_parent"
        android:layout_height="149.00dp"
        android:layout_below="@id/ll_guide_mid_item_top"
        android:layout_gravity="center"
        android:src="@drawable/img_introduce_02" />

    <TextView
        android:id="@+id/tv_guide_mid_item_summary"
        android:layout_width="match_parent"
        android:layout_height="21.33dp"
        android:layout_below="@id/iv_guide_mid_item"
        android:gravity="center"
        android:layout_marginLeft="27.33dp"
        android:layout_marginRight="27.33dp"
        android:text="@string/fm_office_guide_msg_summary2"
        android:textColor="@color/fm_office_guide_summary"
        android:textStyle="bold"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50.00dp"
        android:layout_below="@id/tv_guide_mid_item_summary"
        android:layout_marginLeft="27.33dp"
        android:layout_marginRight="27.33dp"
        android:layout_marginTop="7.00dp"
        android:layout_marginBottom="11.33dp" >

        <TextView
            android:id="@+id/tv_guide_mid_item_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="4.67dp"
            android:text="@string/fm_office_guide_msg_desc2"
            android:textColor="@color/fm_office_guide_desc"
            android:textSize="12sp" />
    </ScrollView>

</RelativeLayout>