<?xml version="1.0" encoding="utf-8"?>
<com.infraware.document.slide.dualview.SlideShowSettingsRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/slide_show_settings_listitem_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />

        <TextView
            android:id="@+id/slide_show_settings_listitem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.33dip"
            android:textColor="@color/po_slide_show_settings_listitem_text_color"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/slide_show_settings_listitem_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="13.33dip"
            android:button="@drawable/cm_btn_radio_selector"
            android:clickable="false"
            android:focusable="false"
            android:visibility="invisible" />
    </LinearLayout>

</com.infraware.document.slide.dualview.SlideShowSettingsRelativeLayout>