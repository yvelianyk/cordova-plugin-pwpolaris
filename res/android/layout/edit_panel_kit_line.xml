<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.infraware.polarisoffice6.common.WheelButtonOutlineCustom
        android:id="@+id/lineWidthSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/panel_common_content_area_margin_vertical"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <com.infraware.polarisoffice6.panel.kit.CommonPanelColor
        android:id="@+id/lineColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/panel_common_content_area_margin_vertical" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/lineType1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/lineType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_line_vertical_space"
        android:gravity="center_horizontal" />

    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/lineType3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_line_vertical_space"
        android:gravity="center_horizontal"
        android:visibility="gone" />
    
    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
        android:id="@+id/lineType4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_line_vertical_space"
        android:gravity="center_horizontal"
        android:visibility="gone" />
    
    <com.infraware.common.widget.WheelButton
        android:id="@+id/lineOpacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panel_common_content_area_margin_vertical"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/lineArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
            android:id="@+id/lineStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_common_content_line_vertical_space"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

        <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
            android:id="@+id/lineEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/panel_common_content_line_vertical_space"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>