<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_cf_scope_change_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <com.infraware.document.sheet.surfaceviews.SheetCFScopeChangeSurfaceView
        android:id="@+id/sheet_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sheet_tab_default"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/sheet_tab_scroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sheet_tab_default" >

            <LinearLayout
                android:id="@+id/sheet_tab"
                android:layout_width="fill_parent"
                android:layout_height="34.00dip"
                android:gravity="bottom"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>