    <Space style="@style/PageBGPageColor.lineLayoutSpace" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="41dip"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/text_size_11"
