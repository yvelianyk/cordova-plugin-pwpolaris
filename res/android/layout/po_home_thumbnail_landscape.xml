<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<RelativeLayout
	    android:id="@+id/home_thumbnail_view"
		android:layout_width="wrap_content"
	   	android:layout_height="wrap_content">
	   	<LinearLayout
	   	    android:id="@+id/home_thumbnail_layout"
	   	    android:layout_width="fill_parent"
	   		android:layout_height="@dimen/home_thumbnail_layout_land"
	   		android:orientation="vertical">
	   		<RelativeLayout 
	   		    android:id="@+id/home_thumbnail_land"
	   		    android:layout_width="wrap_content"
	   		    android:layout_height="@dimen/home_thumbnail_land"
	   		    android:paddingTop="@dimen/home_thumbnail_land_padding_top"
	   		    android:paddingLeft="@dimen/home_thumbnail_land_padding_left_right"
	   		    android:paddingRight="@dimen/home_thumbnail_land_padding_left_right"
	   		    android:visibility="gone">
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_image_land"
					android:layout_width="fill_parent"
		   			android:layout_height="fill_parent"
		   			android:paddingLeft="1dp"
		   			android:paddingRight="1dp"
		   			android:paddingTop="1dp"
		   			android:paddingBottom="6dp"
		   			android:background="@drawable/home_thumbnail_02_landscape_n"/>
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_image_land_cover"
					android:layout_width="fill_parent"
		   			android:layout_height="fill_parent"
		   			android:paddingLeft="1dp"
		   			android:paddingRight="1dp"
		   			android:background="@drawable/fm_home_thumbnail_02_landscape"/>
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_type_land"
		   	        android:layout_width="wrap_content"
		   			android:layout_height="wrap_content"
		   			android:layout_marginRight="2dp"
		   			android:layout_marginBottom="7dp"
		   			android:layout_alignParentRight="true"
		   			android:layout_alignParentBottom="true"/>
		   	</RelativeLayout>
		   	<RelativeLayout 
	   		    android:id="@+id/home_thumbnail_port"
	   		    android:layout_width="wrap_content"
	   		    android:layout_height="@dimen/home_thumbnail_land"
	   		    android:paddingLeft="@dimen/home_thumbnail_port_padding_left_right"
	   		    android:paddingRight="@dimen/home_thumbnail_port_padding_left_right"
	   		     android:visibility="visible">
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_image_port"
					android:layout_width="fill_parent"
		   			android:layout_height="fill_parent"
		   			android:paddingLeft="1dp"
		   			android:paddingRight="1dp"
		   			android:paddingTop="1dp"
		   			android:paddingBottom="6dp"
		   			android:background="@drawable/home_thumbnail_02_portrait_n"/>
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_image_port_cover"
					android:layout_width="fill_parent"
		   			android:layout_height="fill_parent"
		   			android:paddingLeft="1dp"
		   			android:paddingRight="1dp"
		   			android:paddingBottom="4dp"
		   			android:background="@drawable/fm_home_thumbnail_02_portrait"/>
		   	    <ImageView 
		   	        android:id="@+id/home_thumbnail_type_port"
		   	        android:layout_width="wrap_content"
		   			android:layout_height="wrap_content"
		   			android:layout_marginRight="2dp"
		   			android:layout_marginBottom="7dp"
		   			android:layout_alignParentRight="true"
		   			android:layout_alignParentBottom="true"/>
	   	    </RelativeLayout>
	   	    <TextView
	   	        android:id="@+id/home_thumbnail_name"
				android:layout_width="fill_parent"
	   			android:layout_height="@dimen/home_thumbnail_name_height"
	   			android:paddingTop="5dip"
	   			android:textColor="@color/po_home_file_name_normal"
	   			android:textSize="@dimen/home_thumbnail_name"
	   			android:ellipsize="end"
	   			android:lines="2"
	   			android:gravity="top|center_horizontal"/>
	   	</LinearLayout>
	   	
	   	<ImageView 
	   	    android:id="@+id/home_thumbnail_favorite"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:background="@drawable/home_ico_favorite"
	   		android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>