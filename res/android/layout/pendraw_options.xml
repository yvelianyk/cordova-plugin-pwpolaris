                        android:layout_height="40dip"
                        android:focusable="true"
                        android:contentDescription=" " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.infraware.common.widget.marker.MarkerColorImageView
                        android:id="@+id/pendraw_color07"
                        android:layout_width="40.67dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="2dip"
                        android:focusable="true"
                        android:contentDescription=" " />

                    <com.infraware.common.widget.marker.MarkerColorImageView
                        android:id="@+id/pendraw_color08"
                        android:layout_width="40.67dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="2dip"
                        android:focusable="true"
                        android:contentDescription=" " />

                    <com.infraware.common.widget.marker.MarkerColorImageView
                        android:id="@+id/pendraw_color09"
                        android:layout_width="40.67dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="2dip"
                        android:focusable="true"
                        android:contentDescription=" " />

                    <com.infraware.common.widget.marker.MarkerColorImageView
                        android:id="@+id/pendraw_color10"
                        android:layout_width="40.67dip"
                        android:layout_height="40dip"
                        android:layout_marginRight="2dip"
                        android:focusable="true"
