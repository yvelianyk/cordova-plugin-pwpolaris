	                    android:id="@+id/pendraw_size_3"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_3_selector_common" />
	
	                <ImageView
	                    android:id="@+id/pendraw_size_4"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_4_selector_common" />
		
		             <ImageView
	                    android:id="@+id/pendraw_size_5"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_5_selector_common" />
		
					<ImageView
	                    android:id="@+id/pendraw_size_6"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_6_selector_common" />
				</LinearLayout>
				<View
				    android:layout_width="match_parent"
				    android:layout_height="0.67dp"
				    android:background="#C2C2C2"/>

	
				<SeekBar
                    android:id="@+id/pen_drawing_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.5dp"
                    android:layout_marginBottom="5.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.33dip"
                    android:layout_marginRight="5.33dip"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:max="50"
                    android:maxHeight="31.67dp"
                    android:minHeight="31.67dp"
                    android:progress="1"
                    android:progressDrawable="@drawable/marker_thickness_progress_selector_common"
                    android:thumb="@drawable/marker_thickness_thumb_selector_common"
                    android:background="@null"
                    android:thumbOffset="0dp"/>

			</LinearLayout>
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dip"
                android:layout_marginBottom="5dip"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="0dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:orientation="horizontal" >

                    <com.infraware.common.widget.marker.MarkerColorImageView
