<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pendraw_option"
    android:layout_width="274.67dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.infraware.common.widget.marker.MarkerPreviewImageView
                    android:id="@+id/pendraw_preview"
                    android:layout_width="match_parent"
                    android:layout_height="53dip"
                    android:layout_marginBottom="6.67dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
					android:background="@drawable/bg_preview"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pen_chang_option"
                android:layout_width="match_parent"
                android:layout_height="41dip"
                android:layout_marginBottom="6.67dip"
                android:orientation="horizontal"
                android:padding="0dip" >

                <ImageView
                    android:id="@+id/pendraw_pencle_type"
                    android:layout_width="0dip"
                    android:layout_height="41dip"
                    android:layout_weight="1"
                    android:layout_marginLeft ="5dip"
                    android:background="@drawable/btn_multi_left_selector_common"
                    android:contentDescription="@string/cm_action_bar_pen"
                    android:focusable="true"
                    android:scaleType="center"
                    android:src="@drawable/pendrawing_pen_selector" />

                <!--  
                <ImageView
                    android:id="@+id/pendraw_ink_type"
                    android:layout_width="63.33dip"
                    android:layout_height="41dip"
                    android:background="@drawable/cm_btn_multiple_center_disselectable_selector"
                    android:contentDescription="@string/dm_brush"
                    android:src="@drawable/pendrawing_brush_selector" />
				-->
                <ImageView
                    android:id="@+id/pendraw_highlighter_type"
                    android:layout_width="0dip"
                    android:layout_height="41dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_multi_center_selector_common"
                    android:contentDescription="@string/dm_highlight"
                    android:focusable="true"
                    android:scaleType="center"
                    android:src="@drawable/pendrawing_highlighter_selector" />

                <ImageView
                    android:id="@+id/pendraw_straight_type"
                    android:layout_width="0dip"
                    android:layout_height="41dip"
                    android:layout_weight="1"
                    android:layout_marginRight ="5dip"
                    android:background="@drawable/btn_multi_right_selector_common"
                    android:contentDescription="@string/dm_ruller"
                    android:focusable="true"
                    android:scaleType="center"
                    android:src="@drawable/pendrawing_ruler_selector" />
            </LinearLayout>
			<LinearLayout 
			    android:orientation="vertical"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_preset"
			    android:layout_marginLeft="5dip"
			    android:layout_marginRight="5dip"
			    android:layout_marginBottom="6.67dip" >
				<LinearLayout
	                android:id="@+id/pen_drawing_size_button_layout"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" >
	
	                <ImageView
	                    android:id="@+id/pendraw_size_1"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_1_selector_common" />
		
	                <ImageView
	                    android:id="@+id/pendraw_size_2"
	                    android:layout_width="42dip"
	                    android:layout_height="39.67dip"
	                    android:contentDescription=" "
	                    android:scaleType="center"
	                    android:focusable="true"
	                    android:background="@drawable/bg_focused_selector"
	                    android:src="@drawable/pendrawing_size_2_selector_common" />
	
