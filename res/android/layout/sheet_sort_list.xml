<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_sort_list_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ScrollView
        android:id="@+id/ScrollSheetSort"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/linear_sort_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- Primary Key -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.00dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sheet_sort_text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.00dp"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp"
                    android:gravity="left|center"
                    android:text="@string/dm_sort_primary_key"
                    android:textColor="@color/panel_sub_title_tcolor"
                    android:textSize="14.00sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/btn_sort_key1"
                        android:layout_width="0.00dp"
                        android:layout_height="41dp"
                        android:layout_marginLeft="17.00dp"
                        android:layout_marginRight="7.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_more_selector_sheet"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="13.00dp"
                        android:textColor="@color/btn_default_tcolor_selector"
                        android:textSize="16sp" />

                    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
                        android:id="@+id/btn_sort_by1"
                        android:layout_width="98.00dp"
                        android:layout_height="41.00dp"
                        android:layout_marginRight="17.00dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Secondary Key -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.00dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sheet_sort_text_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.00dp"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp"
                    android:gravity="left|center"
                    android:text="@string/dm_sort_final_key"
                    android:textColor="@color/panel_sub_title_tcolor"
                    android:textSize="14.00sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/btn_sort_key2"
                        android:layout_width="0.00dp"
                        android:layout_height="41.00dp"
                        android:layout_marginLeft="17.00dp"
                        android:layout_marginRight="7.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_more_selector_sheet"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="13.00dp"
                        android:textColor="@color/btn_default_tcolor_selector"
                        android:textSize="16sp" />

                    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
                        android:id="@+id/btn_sort_by2"
                        android:layout_width="98.00dp"
                        android:layout_height="41.00dp"
                        android:layout_marginRight="17.00dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Final Key -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.00dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sheet_sort_text_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.00dp"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp"
                    android:gravity="left|center"
                    android:text="@string/dm_sort_final_key"
                    android:textColor="@color/panel_sub_title_tcolor"
                    android:textSize="14.00sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/btn_sort_key3"
                        android:layout_width="0.00dp"
                        android:layout_height="41.00dp"
                        android:layout_marginLeft="17.00dp"
                        android:layout_marginRight="7.00dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_more_selector_sheet"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="13.00dp"
                        android:textColor="@color/btn_default_tcolor_selector"
                        android:textSize="16sp" />

                    <com.infraware.polarisoffice6.panel.kit.PanelButtonImage
                        android:id="@+id/btn_sort_by3"
                        android:layout_width="98.00dp"
                        android:layout_height="41.00dp"
                        android:layout_marginRight="17.00dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- line -->

            <LinearLayout
                android:id="@+id/line_sort_divider"
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:layout_marginBottom="15.33dp"
                android:layout_marginLeft="17.00dp"
                android:layout_marginRight="17.00dp"
                android:layout_marginTop="15.33dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.00dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.00dp"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp"
                    android:gravity="left|center"
                    android:text="@string/dm_sort_direction"
                    android:textColor="@color/panel_sub_title_tcolor"
                    android:textSize="14.00sp" />

                <RadioGroup
                    android:id="@+id/rg_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rbtn_orientation_01"
                        style="@style/SelectionListItem.RadioButton.Top"
                        android:drawableLeft="@drawable/radio_selector_sheet"
                        android:background="@drawable/btn_multi_top_selector_sheet"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbtn_orientation_02"
                        style="@style/SelectionListItem.RadioButton.Bottom"
                        android:drawableLeft="@drawable/radio_selector_sheet"
                        android:background="@drawable/btn_multi_bottom_selector_sheet" />
                </RadioGroup>

                <!--
                     <com.infraware.polarisoffice6.panel.kit.PanelList
                    android:id="@+id/sheetOrientationList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.00dp"
                    android:layout_marginRight="17.00dp" />

                -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/sheetSortList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/cm_menu_divider"
        android:dividerHeight="0.67dp"
        android:background="@color/cm_white" />

</LinearLayout>