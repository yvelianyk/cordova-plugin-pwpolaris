<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/keypadlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:orientation="vertical"
       	android:background="@color/keypad_bg_color" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dip"
            android:layout_marginTop="2.5dip"
            android:layout_marginRight="2.5dip" >

            <Button
                android:id="@+id/key1"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:text="1"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key2"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="2"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key3"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="3"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/button_del"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:textColor="@color/btn_default_tcolor_selector"
                android:background="@drawable/sheet_keypad_btn_symbol_bg"
                android:textSize="@dimen/keypad_text_size"
                android:drawableTop="@drawable/keypad_ico_delete_selector"
                android:paddingTop="13dp" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="2.5dip" >

            <Button
                android:id="@+id/key4"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:text="4"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key5"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="5"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key6"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="6"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key0"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="0"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="52dip"
            android:layout_marginLeft="2.5dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="2.5dip"
            android:layout_marginBottom="2.5dip" >

            <Button
                android:id="@+id/key7"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>
        
            <Button
                android:id="@+id/key8"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="8"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>

            <Button
                android:id="@+id/key9"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:text="9"
                android:background="@drawable/sheet_keypad_btn_number_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" />

            <Button
                android:id="@+id/button_empty"
                android:layout_width="0dip"
                android:layout_height="52dip"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5.0dip"
                android:background="@drawable/sheet_keypad_btn_symbol_bg"
                android:textColor="@color/btn_default_tcolor_selector"
                android:textSize="@dimen/keypad_text_size" >
            </Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</merge>