<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/header_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="17.5dp"
                android:background="@drawable/panel_titlesub_bg"
                android:gravity="left|center_vertical"
                android:paddingLeft="10.67dp"
                android:paddingRight="10.67dp"
                android:text="@string/dm_page_header"
                android:textColor="@color/panel_anchor_title_tcolor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/header_empty_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.00dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="17.00dp"
                        android:text="@string/dm_empty"
                        android:textColor="@color/panel_sub_title_tcolor"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/header_add"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginLeft="18.67dp"
                        android:layout_marginRight="8.5dp"
                        android:background="@drawable/img_template_top"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:paddingLeft="11dip"
                        android:paddingRight="11dip"
                        android:text="@string/dm_text_input"
                        android:textColor="@color/panel_item_tcolor_selector"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/header_empty3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.00dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="4.67dp"
                        android:text="@string/dm_empty_3"
                        android:textColor="@color/panel_sub_title_tcolor"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:id="@+id/header_add3"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginLeft="8.5dp"
                        android:layout_marginRight="18.67dp"
                        android:background="@drawable/img_template_top"
                        android:clickable="true"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/header_add3_tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:duplicateParentState="true"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="11dip"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/header_add3_tv_2"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/header_add3_tv_3"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:duplicateParentState="true"
                            android:gravity="right|center_vertical"
                            android:paddingRight="11dip"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/footer_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="17.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/panel_titlesub_bg"
                android:gravity="left|center_vertical"
                android:paddingLeft="10.67dp"
                android:paddingRight="10.67dp"
                android:text="@string/dm_page_footer"
                android:textColor="@color/panel_anchor_title_tcolor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/footer_empty_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.00dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="17.00dp"
                        android:text="@string/dm_empty"
                        android:textColor="@color/panel_sub_title_tcolor"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/footer_add"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginLeft="18.67dp"
                        android:layout_marginRight="8.5dp"
                        android:background="@drawable/img_template_bottom"
                        android:gravity="center_vertical"
                        android:onClick="onClick"
                        android:paddingLeft="11dip"
                        android:paddingRight="11dip"
                        android:text="@string/dm_text_input"
                        android:textColor="@color/panel_item_tcolor_selector"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/footer_empty3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.00dp"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="4.67dp"
                        android:text="@string/dm_empty_3"
                        android:textColor="@color/panel_sub_title_tcolor"
                        android:textSize="14sp" />

                    <FrameLayout
                        android:id="@+id/footer_add3"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginLeft="8.5dp"
                        android:layout_marginRight="18.67dp"
                        android:background="@drawable/img_template_bottom"
                        android:clickable="true"
                        android:onClick="onClick" >

                        <TextView
                            android:id="@+id/footer_add3_tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:duplicateParentState="true"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="11dip"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/footer_add3_tv_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/footer_add3_tv_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:duplicateParentState="true"
                            android:gravity="right|center_vertical"
                            android:paddingRight="11dip"
                            android:text="@string/dm_text_input"
                            android:textColor="@color/panel_item_tcolor_selector"
                            android:textSize="9sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pageNumber_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="17.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/panel_titlesub_bg"
                android:gravity="left|center_vertical"
                android:paddingLeft="10.67dp"
                android:paddingRight="10.67dp"
                android:text="@string/dm_page_page"
                android:textColor="@color/panel_anchor_title_tcolor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/pageNum_head"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="18.67dp"
                android:layout_marginRight="18.67dp" >

                <Button
                    android:id="@+id/topPageLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="13.33dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_top"
                    android:gravity="left|center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="11dip"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/topPageCenter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="13.33dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_top"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/topPageRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="13.33dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_top"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:paddingRight="11dip"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/bottomPageLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="13.33dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_bottom"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:paddingLeft="11dip"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/bottomPageCenter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="13.33dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_bottom"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/bottomPageRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/img_template_bottom"
                    android:gravity="right|center_vertical"
                    android:onClick="onClick"
                    android:paddingRight="11dip"
                    android:text="1"
                    android:textColor="@color/panel_item_tcolor_selector"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>