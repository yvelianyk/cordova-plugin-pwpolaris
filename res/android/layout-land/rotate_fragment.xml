<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rotateLinearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/base_common_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actiontitlebar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/editdegreelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.00dip"
        android:layout_marginLeft="12.67dip"
        android:layout_marginRight="12.67dip"
        android:layout_marginTop="20.00dip"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.infraware.polarisoffice6.common.ExEditText
            android:id="@+id/edit_degree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textfield_selector_common"
            android:digits="1234567890"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingLeft="11.00dip"
            android:paddingRight="11.00dip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/cm_edit_text_normal"
            android:textColorHighlight="@color/cm_edit_text_highlight"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/rotateangleLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.33dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/rotate_type_01"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/btn_multi_left_selector_common"
                android:src="@drawable/ico_rotate_right90_selector" />

            <ImageButton
                android:id="@+id/rotate_type_02"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/btn_multi_center_selector_common"
                android:src="@drawable/ico_rotate_left90_selector" />

            <ImageButton
                android:id="@+id/rotate_type_03"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/btn_multi_center_selector_common"
                android:src="@drawable/ico_rotate_180_selector" />

            <ImageButton
                android:id="@+id/rotate_type_04"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/btn_multi_center_selector_common"
                android:src="@drawable/ico_rotate_vertical_symmetry_selector" />

            <ImageButton
                android:id="@+id/rotate_type_05"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="@drawable/btn_multi_right_selector_common"
                android:src="@drawable/ico_rotate_bilateral_symmetry_selector" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom" >

        <include
            android:id="@+id/keypadlayout"
            android:layout_width="match_parent"
            android:layout_height="221.99dp"
            android:layout_weight="0"
            layout="@layout/keypad" />
    </LinearLayout>

</LinearLayout>